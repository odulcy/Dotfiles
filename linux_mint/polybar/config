font-1 = "UbuntuMono Nerd Font:size=12;3"
font-2 = "FontAwesome:style=Regular"

modules-left = i3
modules-center = date
modules-right = wireless-network delimiter networkspeedup networkspeeddown delimiter memory delimiter cpu delimiter battery delimiter backlight delimiter temperature-cpu delimiter 

tray-position = right
tray-detached = false
tray-maxsize = 20
tray-background = ${colors.background}
tray-offset-x = 0
tray-offset-y = 0
tray-padding = 0
